<div class="container-fluid">
  <div class="row">
    <!-- 左カラム (ユーザー情報) -->
    <div class="col-3">
      <%= render 'books/user_info', user: @user, book: Book.new %>
    </div>

    <!-- 右カラム (本の詳細) -->
    <div class="col-8 offset-1">
      <h1>Books </h1>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user) %><br>
                <%= link_to book.user.name, user_path(book.user) %>
              </th>
              <th>
                <%= link_to book.title, book_path(book) %>
              </th>
              <th><%= book.body %></th>
              <th><%= link_to "Edit", edit_book_path(book), class: "btn btn-success" %></th>
              <th><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger' %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

